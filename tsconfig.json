{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "ES2019"
    ],
    "baseUrl": "src",
    "paths": {
      "@db/*": ["db/*"],
      "@models/*": ["models/*"],
      "@routers/*": ["routers/*"],
      "@settings/*": ["settings/*"],
      "@/*": ["/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}