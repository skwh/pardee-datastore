{
  "name": "pardee-datastore",
  "version": "0.9.0",
  "description": "Datastore for pardee center data",
  "main": "dist/app.js",
  "scripts": {
    "build:full": "./build/build.sh",
    "build": "npm run lint:quiet && npm run compile",
    "compile": "tsc --build",
    "serve": "node dist/app.js",
    "start": "npm run build && npm run serve",
    "test": "nyc mocha src/test/*.spec.ts src/test/**/*.spec.ts",
    "lint": "eslint src --ext .ts --fix",
    "lint:quiet": "eslint src --ext .ts --fix --quiet"
  },
  "author": "Evan Derby <somekidwithhtml@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parser": "^2.3.2",
    "express": "^4.17.1",
    "express-promise-router": "^3.0.3",
    "helmet": "^3.21.3",
    "js-yaml": "^3.13.1",
    "json-2-csv": "^3.6.1",
    "pg": "^7.18.1",
    "slugify": "^1.4.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai-spies": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/js-yaml": "^3.12.2",
    "@types/mocha": "^7.0.2",
    "@types/pg": "^7.14.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "ts-mocha": "^7.0.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extends": "@istanbuljs/nyc-config-typescript"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  }
}
